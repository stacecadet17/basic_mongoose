<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Users</h1>
    <!-- iterating through all posts in users -->
    <% for(var x in users) { %>
      <!-- syntax for ierating through name and age of each user  -->
      <h3>Name: <%= users[x].name %></h3>
      <h4>Age: <%= users[x].age %></h4>
    <% } %>
    <form action="/users" method="POST">
       <label>Name:</label>
       <input type='text' name='name'>
       <label>Age:</label>
       <input type='number' name='age'>
       <input type="submit" value="Add">
   </form>
  </body>
</html>
